<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VintageGroupCar</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/header-footer.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/VintageGroupCar.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="navbar">
        <div class="logo"><img src="~/images/logos/LogoGroup.png" alt="Logo Vintage Group Car" class="img"></div>
        <div class="nav-links">
            <a href="/">Home</a>
            <a href="/About">Chi Siamo</a>
            <a href="/Raduni">Raduni</a>
            <a href="/Contatti">Contatti</a>
        </div>
    </div>
   
    <div>
        <main role="main" class="pb-3" class="main-content">
            @RenderBody()
        </main>
    </div>
    <footer class="footer">
        <div class="footer-content">
            <div>
                <h4>Menù</h4>
                <ul class="menu">
                    <li><a href="#">Homepage</a></li>
                    <li><a href="#">Chi Siamo</a></li>
                    <li><a href="#">Foto</a></li>
                    <li><a href="#">Calendario</a></li>
                </ul>
            </div>
            <div>
                <h4>Contattaci</h4>
                <p>Nome: Luigi Massa</p>
                <p>Numero: <a href="#">3847860222</a></p>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
